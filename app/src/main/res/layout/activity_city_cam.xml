<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/cam_image"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:background="#999"
                android:scaleType="centerCrop"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Widget.Holo.Light.ProgressBar.Large.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fl"
            android:layout_margin="5dp"
            android:text="@string/city"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:layout_margin="5dp"
            android:text="@string/region"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/region"
            android:layout_margin="5dp"
            android:text="@string/country"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/continent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/country"
            android:layout_margin="5dp"
            android:text="@string/continent"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/continent"
            android:layout_margin="5dp"
            android:text="@string/latitude"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/latitude"
            android:layout_margin="5dp"
            android:text="@string/longitude"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/timezone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/longitude"
            android:layout_margin="5dp"
            android:text="@string/timezone"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/wiki_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timezone"
            android:layout_margin="5dp"
            android:autoLink="web"
            android:text="@string/wiki_link"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wiki_link"
            android:layout_margin="5dp"
            android:text="@string/categories"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categories"
            android:layout_margin="5dp"
            android:text="@string/views"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/webcam_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/views"
            android:layout_margin="5dp"
            android:autoLink="web"
            android:text="@string/webcam_link"
            android:textSize="15sp" />


    </RelativeLayout>

</ScrollView>